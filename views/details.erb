<h4>Post details:</h4>
<p>
  <%= @row['content'] %>
  <br>
  <br>
  Added at <%= @row['created_date'] %>
</p>
<br>
<h4>Comments</h4>
<p>
  <form action="/details/<%= @row['id'] %>" method="POST" role="form">

    <div class="mb-3">
      <label for="exampleFormControlTextarea1" class="form-label">Add comment</label>
      <textarea name="content" class="form-control" placeholder="Type comment text here" id="exampleFormControlTextarea1" rows="3"></textarea>
    </div>
    <br>
    <button type="submit" class="btn btn-primary">Add comment</button>
  </form>
</p>

<p>
  <h4>Latest comments:</h4>
  <br>
  <% @comments.each do |comment| %>
  <p>
    <%= comment['content'] %>
    <br>
    Added at <%= comment['created_date'] %>
    <br>
  </p>
  <hr>
  <% end %>
</p>
